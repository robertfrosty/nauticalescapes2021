.content h1 {
	font-size: 4vw;
	width: 100%;
	text-align: center;
	color: #122449;
}
.content p {
	font-size: 1.6vw;
	width: calc(100% - 1.6vw);
	text-align: center;
	margin: 0vw 0.8vw 4vw 0.8vw;
}
.crew_mem {
	margin: 2vw 0vw;
	display: flex;
	flex-wrap: wrap;
}
.favs {
	border-radius: 5px;
	background: #122449;
	margin: 0vw 2vw;
	padding: 4vw;
	width: calc(100% - 12vw - 4px);
	text-align: center;
	box-shadow: inset 0 0 6px #666;
}
.favs h1 {
	color: #FFF;
}
.favs b {
	color: #76A1C8;
}
.favs p {
	margin-bottom: 0vw; 
}
.pers {
	border-radius: 5px;
	background: #122449;
	margin: 0vw 2vw;
	padding: 4vw;
	width: calc(50% - 12vw - 4px);
	text-align: center;
	box-shadow: inset 0 0 6px #666;
}
.pers .mimg {
	box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
	background: #122449;
	height: 20vw;
	width: 20vw;
	object-fit: cover;
	border-radius: 50%;
}
.pers .title4 {
	font-size: 3vw;
	color: #FFF;
}
.pers .role {
	color: #76A1C8;
	font-size: 2.5vw;
}
.pers p {
	margin: 1vw 0vw;
	font-size: 2vw;
	color: #BAB1BA;
	height: 22vw;
}
.infotext {
	width: 75%;
	display: flex;
	align-items: center;
	margin: 0 auto;
}
.pers .infotext img {
	width: 4vw;
}
.pers .infotext p {
	margin: 0;
	width: 100%;
	color: #76A1C8;
	height: auto;
}
.experience, .favourites {
	border: 2px solid #122449;
	background: #76a1c8;
	border-radius: 5px;
	box-shadow: inset 0 0 6px #666;
	padding: 1vw;
	text-align: left;
	margin: 2vw;
}
.experience:hover, .favourites:hover {
	background: #fff;
}
.experience h1, .favourites h1 {
	font-size: 3vw;
	color: #122449;
	text-align: center;
}
.experience p, .favourites p {
	font-size: 2vw;
	color: #000;
}

@media screen and (min-width: 769px) and (max-width: 1024px) {
	.pers p {
		height: 50vw;
	}
}

@media screen and (min-width: 214px) and (max-width: 768px) {
	.pers p {
		height: 50vw;
	}
}
